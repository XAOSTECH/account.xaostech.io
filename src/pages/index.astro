---
/**
 * Account Dashboard (Home Page)
 * 
 * Shows user info and navigation for authenticated users.
 * Auto-redirects to GitHub OAuth for unauthenticated users (seamless SSO).
 * 
 * Add ?prompt=login to force showing the welcome page with options.
 */
import Base from '../layouts/Base.astro';
import UserCard from '../components/UserCard.astro';
import NavGrid from '../components/NavGrid.astro';

const user = Astro.locals.user;
const prompt = Astro.url.searchParams.get('prompt');

// Auto-redirect to GitHub OAuth for seamless SSO (unless user wants to see options)
if (!user && prompt !== 'login') {
  return Astro.redirect('/api/auth/github/login?return_to=/');
}
---
<Base title={user ? 'Dashboard' : 'Welcome'}>
  {user ? (
    <>
      <UserCard user={user} showWelcome={true} />
      <NavGrid role={user.role} />
    </>
  ) : (
    <div class="login-prompt">
      <div class="card" style="max-width:500px;margin:4rem auto;text-align:center">
        <img src="/api/data/assets/XAOSTECH_LOGO.png" alt="XAOSTECH" style="width:80px;margin-bottom:1.5rem" />
        <h1>Welcome to XAOSTECH</h1>
        <p style="color:var(--text-muted);margin:1rem 0 2rem">
          Manage your account, API keys, and family settings.
        </p>
        <div style="display:flex;gap:1rem;justify-content:center;flex-wrap:wrap">
          <a href="/login?method=password" class="btn-secondary" style="display:inline-block;padding:0.75rem 2rem;border-radius:8px;text-decoration:none;font-weight:600;border:1px solid var(--border)">
            Email &amp; Password
          </a>
        </div>
        <div style="margin-top:2rem;padding-top:2rem;border-top:1px solid var(--border)">
          <p style="color:var(--text-muted);font-size:0.875rem">Recommended</p>
          <a href="/api/auth/github/login" 
             class="github-btn" 
             style="display:inline-flex;align-items:center;gap:0.5rem;margin-top:1rem;padding:0.75rem 1.5rem;background:#24292e;color:#fff;border-radius:8px;text-decoration:none;font-weight:600">
            <svg width="20" height="20" viewBox="0 0 98 96" xmlns="http://www.w3.org/2000/svg">
              <path fill-rule="evenodd" clip-rule="evenodd" d="M48.854 0C21.839 0 0 22 0 49.217c0 21.756 13.993 40.172 33.405 46.69 2.427.49 3.316-1.059 3.316-2.362 0-1.141-.08-5.052-.08-9.127-13.59 2.934-16.42-5.867-16.42-5.867-2.184-5.704-5.42-7.17-5.42-7.17-4.448-3.015.324-3.015.324-3.015 4.934.326 7.523 5.052 7.523 5.052 4.367 7.496 11.404 5.378 14.235 4.074.404-3.178 1.699-5.378 3.074-6.6-10.839-1.141-22.243-5.378-22.243-24.283 0-5.378 1.94-9.778 5.014-13.2-.485-1.222-2.184-6.275.486-13.038 0 0 4.125-1.304 13.426 5.052a46.97 46.97 0 0 1 12.214-1.63c4.125 0 8.33.571 12.213 1.63 9.302-6.356 13.427-5.052 13.427-5.052 2.67 6.763.97 11.816.485 13.038 3.155 3.422 5.015 7.822 5.015 13.2 0 18.905-11.404 23.06-22.324 24.283 1.78 1.548 3.316 4.481 3.316 9.126 0 6.6-.08 11.897-.08 13.526 0 1.304.89 2.853 3.316 2.364 19.412-6.52 33.405-24.935 33.405-46.691C97.707 22 75.788 0 48.854 0z" fill="#fff"/>
            </svg>
            Continue with GitHub
          </a>
        </div>
      </div>
    </div>
  )}
</Base>
